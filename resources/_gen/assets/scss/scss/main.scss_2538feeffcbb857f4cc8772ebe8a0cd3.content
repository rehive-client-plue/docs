a {
  color: #002d6d;
  text-decoration: none; }

a:hover {
  color: #ff2852; }

a.heading {
  color: #222; }

a.heading:hover {
  color: #ff2852; }

.button.button-primary {
  background-color: #002d6d;
  border-color: #002d6d; }

.button.button-primary:hover {
  background-color: #ff2852;
  border-color: #ff2852; }

.container {
  max-width: 1100px; }

main.home .hero {
  display: none;
  height: 40rem;
  text-align: center;
  background-image: url("/images/hero.png");
  background-repeat: no-repeat;
  background-position: center; }

main.home .titles {
  text-align: center;
  margin: 6rem 0 10rem 0; }

main.home .cards {
  overflow: hidden;
  position: relative;
  margin: 0 auto;
  width: 100%; }

main.home .cards .card {
  text-align: center;
  border-radius: 4px;
  margin: 1rem 1rem 2rem 1rem;
  padding: 1rem;
  border: 1px solid #eee; }

main.home .links {
  margin: 10rem 0;
  text-align: center; }

main.home .links ul li {
  list-style: none; }

@media (min-width: 550px) {
  main.home .hero {
    display: block; }
  main.home .titles {
    text-align: center;
    margin: 0 0 10rem 0; }
  main.home .cards {
    width: 80%; } }

main .content {
  padding: 4rem 0;
  margin-bottom: 0; }
  main .content aside {
    padding: 1rem;
    margin-bottom: 2rem; }
  main .content aside.warning {
    background-color: #f5e4f9; }
  main .content aside.notice {
    background-color: #dfe5f4; }

.navaside {
  padding: 4rem 0; }
  .navaside li {
    list-style: none; }
  .navaside li > a {
    color: #666; }
  .navaside li > a:hover {
    color: #002d6d; }
  .navaside li > a.active {
    color: #002d6d; }

footer {
  width: 100%;
  border-top: 1px solid #eee; }
  footer .links {
    text-align: center;
    padding: 4rem 0; }
  footer .links > a {
    padding: 0 2rem;
    line-height: 4rem; }

@media (min-width: 550px) {
  .burger-container {
    display: none;
    visibility: hidden; }
  .sidenav {
    display: none;
    visibility: hidden; }
  .navbar {
    display: block;
    width: 100%;
    height: 6.5rem;
    background: #fff;
    z-index: 99;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee; }
    .navbar .container {
      width: 100%; }
    .navbar .navbar-list {
      list-style: none;
      margin-bottom: 0; }
    .navbar .navbar-item {
      position: relative;
      float: left;
      margin-bottom: 0; }
    .navbar .navbar-right-item {
      float: right; }
    .navbar .navbar-logo-link {
      display: block;
      margin-right: 20px; }
    .navbar .navbar-logo-link img {
      display: block;
      height: 4.8rem;
      padding: 0.6rem 0; }
    .navbar .navbar-link {
      font-size: 11px;
      font-weight: 600;
      letter-spacing: .2rem;
      margin-right: 35px;
      line-height: 6.5rem;
      color: #222; }
    .navbar .navbar-right-item .navbar-link {
      margin-right: 0;
      margin-left: 35px; }
    .navbar .navbar-link.active {
      color: #002d6d; } }

@media (max-width: 550px) {
  .navbar {
    display: none;
    visibility: hidden; }
  .mobile-navbar {
    display: block;
    width: 100%;
    height: 6.5rem;
    background: #fff;
    z-index: 99;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee; }
  .burger-container {
    margin: 15px;
    cursor: pointer; }
  .burger {
    width: 35px;
    height: 5px;
    border-radius: 2px;
    background-color: #222;
    margin: 6px 0; }
  .burger-container:hover .burger {
    background-color: #002d6d; }
  .sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    overflow-x: hidden;
    padding-top: 60px;
    transition: 0.5s;
    border-right: 1px solid #eee;
    background-color: #fff; }
  .sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #222;
    display: block;
    transition: 0.3s; }
  .sidenav a:hover {
    color: #002d6d; }
  .sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px; } }

@media screen and (max-width: 550px) and (max-height: 450px) {
  .sidenav {
    padding-top: 15px; }
  .sidenav a {
    font-size: 18px; } }

@media (max-width: 550px) {
  .logo {
    max-width: 150px; } }
